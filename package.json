{
  "name": "arlo-api",
  "version": "1.0.8",
  "description": "Thin API for authenticating with Arlo",
  "main": "dist/index.js",
  "keywords": [
    "arlo",
    "homebridge",
    "mfa"
  ],
  "scripts": {
    "pretty": "npx prettier --write .",
    "lint": "eslint src/**.ts",
    "style": "npm run pretty && npm run lint",
