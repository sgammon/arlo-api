{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist/commonjs",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["src"],
  "exclude": ["./src/tests/", "./node_modules/", "./dist/"]
}
